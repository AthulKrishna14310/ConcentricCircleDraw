<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".MainActivity">

    <com.example.concentriccircledraw.CircleDrawLayout
        android:id="@+id/circleDrawLayout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/finishButtontry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:text="DRAW THE FIRST CIRCLE ,THEN CLICK HERE"
        android:textColor="#FFFF"
        android:textSize="30sp" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="30dp"
        android:layout_margin="8dp"
        app:cardElevation="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/finishButton"

       >
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/refreshButton"
            android:foreground="@drawable/ic_refresh_black_24dp"
            android:background="@color/colorAccent"
            />
    </android.support.v7.widget.CardView>
    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="50sp"
        android:textStyle="bold"
        android:id="@+id/chronometer"
        android:layout_marginRight="10dp"/>


</RelativeLayout>